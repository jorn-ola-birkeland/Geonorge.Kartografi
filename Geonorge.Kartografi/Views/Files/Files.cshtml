@model IEnumerable<Geonorge.Kartografi.Models.CartographyFile>
@section breadcrumb {
    <li><a href="~/tegneregler/">Digital kartografi</a></li>
    <li><a href="~/tegneregler/Files?uuid=@Model.FirstOrDefault().DatasetUuid">@Model.FirstOrDefault().DatasetName</a></li>
}
@{
    ViewBag.Title = "Digital kartografi";
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                Digital kartografi
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

<div class="row">

    <div class="col-no-padding-xs col-xs-12 col-sm-10 col-md-10 col-lg-10">
        Inneholder datasett som har registrert digital kartografi
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div id="tableView" class="search-results">
            <div class="row search-results-table-heading">
                <div class="col-sm-3"><p>@Html.DisplayNameFor(model => model.Name)</p></div>
                <div class="col-sm-2"><p>@Html.DisplayNameFor(model => model.Compatibility)</p></div>
                <div class="col-sm-2"><p>@Html.DisplayNameFor(model => model.Owner)</p></div>
                <div class="col-sm-1"><p>@Html.DisplayNameFor(model => model.OfficialStatus)</p></div>
                <div class="col-sm-1"><p>@Html.DisplayNameFor(model => model.Format)</p></div>
            </div>
            <div class="menu-separator search-results-table-heading"></div>
            @foreach (var item in Model)
            {
                <div class="row result-row metadata">

                    <div class="col-sm-3">
                        @Html.ActionLink(item.Name ?? "->", "Details", new { SystemId = item.SystemId })
                    </div>

                    <div class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.Compatibility)
                    </div>

                    <div class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.Owner)
                    </div>

                    <div class="col-sm-1">
                        @Html.DisplayFor(modelItem => item.OfficialStatus)
                    </div>

                    <div class="col-sm-1">
                        @Html.DisplayFor(modelItem => item.Format)
                    </div>
                </div>
                <hr />
            }
        </div>

    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
        <a class="hidden-print show-loading-animation pull-left" data-loading-message="Henter innhold" href="~/tegneregler">Tilbake</a>
        @if (Request.IsAuthenticated){
        <a class="btn btn-default btn-space pull-right" href="~/tegneregler/Create">Legg til</a>
        }
    </div>
</div>
