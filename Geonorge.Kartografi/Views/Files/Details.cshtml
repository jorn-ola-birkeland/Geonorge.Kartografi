﻿@model Geonorge.Kartografi.Models.CartographyFile

@{
    ViewBag.Title = Model.Name;
}

@section breadcrumb {
    <li><a href="~/tegneregler/">Digital kartografi og symboler</a></li>
    <li>@Model.Name</li>
}

<h2>@Model.Name</h2>

<a href="~/files/@Model.FileName" class="btn" target="_blank">
    <span class="glyphicon glyphicon-download-alt"> </span>Last ned
</a><br />
<img src="~/files/@Model.PreviewImage" />
<br />
<a class="btn btn-default btn-space pull-right" style="margin-left: 15px;" href="~/tegneregler/Delete/@Model.SystemId">Slett</a>

<a class="btn btn-default btn-space pull-right" href="~/tegneregler/Edit/@Model.SystemId">Rediger</a>