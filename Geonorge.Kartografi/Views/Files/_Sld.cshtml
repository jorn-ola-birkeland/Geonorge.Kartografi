            @DisplayMoreSymbols(sld, box)
        </svg>
}
else if (sld.WellKnownName == "triangle")
{
        <svg height="100" width="100" viewBox="@viewBox">
            <polygon points="50,0 100,100 0,100"
                     fill="@sld.Fill" stroke-width="@sld.StrokeWidth" stroke="@sld.Stroke" />
            @DisplayMoreSymbols(sld, box)
        </svg>
}
