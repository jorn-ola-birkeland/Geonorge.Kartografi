                                    <polygon points="75,5 95,25"
                                             stroke-width="@sld.StrokeWidth" stroke="@sld.Stroke" />

            }
            else if (sld.WellKnownName == "x")
            {
                <rect width="100" height="100"
                      fill="rgb(255,255,255)" stroke-width="4" stroke="rgb(0,0,0)" />
                            <polygon points="5,5 95,95"
