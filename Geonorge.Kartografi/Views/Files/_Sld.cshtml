@functions {
    public class ViewBox
    {
        public double X { get; set; } = 0;
        public double Y { get; set; } = 0;
        public double W { get; set; } = 100;
        public double H { get; set; } = 100;
    }

    public ViewBox CalculateViewBox(ViewBox view, SldRule sld)
    {
        double skaleringstall = (double)sld.MoreSymbols.Last().Size / sld.Size;
        double tilleggstall = skaleringstall * 100;
        view.X = -tilleggstall / 2;
        view.Y = -tilleggstall / 2;
        view.W = view.W + tilleggstall;
        view.H = view.H + tilleggstall;

        return view;
    }

}

@helper DisplayMoreSymbols(SldRule sld, ViewBox box)
{
    if (sld.MoreSymbols != null && sld.MoreSymbols.Count > 0)
    {
        box = CalculateViewBox(box, sld);

        foreach (var sldRule in sld.MoreSymbols)
        {
            @DisplaySldRule(sldRule, box);
        }
    }
}

@helper DisplaySldRule(SldRule sld, ViewBox box)
{

var viewBox = box.X + " " + box.Y + " " + box.W + " " + box.H;
viewBox = viewBox.Replace(",", ".");

