{
        <svg width="100" height="100" viewBox="@viewBox">
            <line stroke-dasharray="@sld.StrokeDasharray" x1="0" y1="50" x2="100" y2="50"
                  stroke-width="8" stroke="@sld.Stroke" />
            @DisplayMoreSymbols(sld, box)
        </svg>
}
