@model PagedList.IPagedList<Geonorge.Kartografi.Models.Dataset>
@using PagedList.Mvc;
@section breadcrumb {
    <li>Digital kartografi</li>
}
@{
    ViewBag.Title = "Digital kartografi";
}

<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h1>
                Digital kartografi
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

<div class="row">

    <div class="col-no-padding-xs col-xs-12 col-sm-10 col-md-10 col-lg-10">
        Registeret inneholder datasett som har registrert digital kartografi
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div id="tableView" class="search-results">
            <div class="row search-results-table-heading">
                <div class="col-sm-5"><p>@Html.ActionLink("Tittel", "Index", new { sortOrder = ViewBag.DatasetNameSortParm, text = ViewBag.text }, new { @class = ViewBag.SortOrder.Contains("datasetname") ? (ViewBag.DatasetNameSortParm.Contains("desc") ? "sorted-desc" : "sorted-asc") : "" })</p></div>
                <div class="col-sm-4"><p>@Html.ActionLink("Eier", "Index", new { sortOrder = ViewBag.DatasetOwner, text = ViewBag.text }, new { @class = ViewBag.SortOrder.Contains("datasetowner") ? (ViewBag.DatasetNameSortParm.Contains("desc") ? "sorted-desc" : "sorted-asc") : "" })</p></div>
                <div class="col-sm-3"><p>@Html.ActionLink("Tema", "Index", new { sortOrder = ViewBag.Theme, text = ViewBag.text }, new { @class = ViewBag.SortOrder.Contains("theme") ? (ViewBag.DatasetNameSortParm.Contains("desc") ? "sorted-desc" : "sorted-asc") : "" })</p></div>
            </div>


            <div class="menu-separator search-results-table-heading"></div>
            @foreach (var item in Model)
            {
                <div class="row result-row metadata">

                    <div class="col-sm-5">
                        @Html.ActionLink(item.DatasetName ?? "->", "Files", new { uuid = item.DatasetUuid })
                    </div>

                    <div class="col-sm-4">
                        @Html.DisplayFor(modelItem => item.OwnerDataset)
                    </div>

                    <div class="col-sm-3">
                        @Html.DisplayFor(modelItem => item.Theme)
                    </div>
                </div>
                <hr />
             }
        </div>
        Side @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) av @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, text = ViewBag.text }))
    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-print">
        <a class="hidden-print show-loading-animation pull-left" data-loading-message="Henter innhold" href="/">Tilbake</a>
        @if (Request.IsAuthenticated) {
        <a class="btn btn-default btn-space pull-right" href="~/tegneregler/Create">Legg til</a>
        }

    </div>
</div>
